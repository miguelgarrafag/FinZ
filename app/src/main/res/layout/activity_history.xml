<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorCream"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/back"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/ic_arrow_back"
            android:padding="10dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:contentDescription="@string/app_name" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_gravity="center_horizontal"
            android:text="@string/str_my_operation"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@color/colorBlack"
            android:textSize="24sp" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/disposition"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/selector_history_disposition"
            android:contentDescription="@string/app_name" />

        <ImageView
            android:id="@+id/dolar"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:src="@drawable/selector_history_dolar"
            android:contentDescription="@string/app_name" />

        <ImageView
            android:id="@+id/evaluation"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/selector_history_evaluation"
            android:contentDescription="@string/app_name" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"/>

</LinearLayout>